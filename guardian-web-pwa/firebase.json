{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/escola/**",
                "destination": "/escola/index.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "/firebase-messaging-sw.js",
                "headers": [
                    {
                        "key": "Service-Worker-Allowed",
                        "value": "/"
                    }
                ]
            }
        ]
    }
}